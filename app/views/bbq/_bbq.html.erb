<section id="page-content" class="shows">
  <form id="select-nav">
    <select id="year">
      <option value="2009">2009</option>
      <option value="2010">2010</option>
    </select>

    <select id="place">
      <option value="chi-10">CHI/'10</option>
      <option value="nyc-10">NYC/'10</option>
    </select>

    <select id="day">
      <option value="thu">Thursday</option>
      <option value="fri">Friday</option>
      <option value="sat">Saturday</option>
    </select>
    
    <button type="submit">Go</button>
  </form>
  <div style="clear:both;"></div>

  
  <section id="show-info">
    <%= link_to 'Share', {:action => 'http://www.facebook.com/sharer.php'}, :name => 'fb_share', :title => bbq.full_title, :type => 'button', :class => 'share' -%>
    <hgroup>
      <h1><%= bbq.full_title %></h1>
      <h2><%= bbq.venue.name%> <a href="<%=bbq.venue.url%>" target="_blank">info</a></h2>
	    <h3><%= bbq.venue.address%> <a href="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=<%=URI.escape(bbq.venue.address)%>&amp;ie=UTF8&amp;" target="_blank">map</a></h3>
	  </hgroup>
    
    <!-- For each band submitted, we should give an option for a link. If no link, then there should be no <a> -->
    <ul class="band_list">
      <li>One Band Name <em>9:00pm - 9:30pm</em></li>
      <li>Another Band <em>9:45pm - 10:15pm</em></li>
      <li>This One Dude <em>10:30pm - 11:00pm</em></li>
      <li>Two Chicks <em>11:15pm - 11:45pm</em></li>
      <li>I Dunno What <em>12:00pm - 12:30pm</em></li>
      <li>Yuh-uhuh! <em>12:45pm - 1:15am</em></li>
      <li>A Bunch of Jerks <em>1:30am - 2:00am</em></li>
    </ul>
    
    <div class="description">
      <%= bbq.content%>
    </div>
  </section>
</section>

<% content_for :script do %>

<% end %>