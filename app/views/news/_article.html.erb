<section class="story_container">          
  <div class="title_container">
    <h1 class="article_title"><%= link_to article.full_title, :action=>"article", :id=>article.permalink -%></h1>
    <ul class="info">
      <li class="time_stamp">
        <%= article.created_at_formatted -%>
      </li>
      <li class="share">
        <%= link_to 'Share', {:action => 'http://www.facebook.com/sharer.php'}, :name => 'fb_share', :title => article.full_title, :type => 'button_count', :share_url => article.fblink -%>
      </li>
    </ul>
  </div>
  
  <%= article.content -%>
</section>