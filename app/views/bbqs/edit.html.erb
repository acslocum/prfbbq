<h1>BBQ: Edit Day</h1>

<ul class="admin_controls">
  <li><%= link_to 'BBQ List', bbqs_path %></li>
  <li><%= link_to 'Preview', @bbq %></li>
</ul>

<% form_for(@bbq) do |f| %>
  <div id="error_message">
    <%= f.error_messages %>
  </div>
  
  <div class="input_container radio_checkbox">
    <%= f.check_box :is_published %>
    <%= f.label :is_published %>
  </div>

  <div class="input_container">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="input_container short">
    <%#= f.label :event_date %>
    <%#= f.date_select :event_date %>
    <label for="event_date">Event Date</label>
    <input type="text" id="event_date" />
  </div>
  
  <div class="input_container">
    <%= f.label :content %>
    <%= f.text_area :content, :size=>"80x40" %>
  </div>
  
  <%= f.submit 'Update' %>
<% end %>

<% content_for :javascript do %>
  <script>
    $(function() {
      $('select').customSelects();
      $('input.time').timeEntry();
      $('input.time').blur(function() {
        new CleanValue(this);
      });
      $('#event_date').datepicker().datepicker('setDate', new Date());
    });
  </script>
<% end %>