<% content_for :nav do %>
  <%= link_to 'New', new_bbq_path %>
<% end %>

<h1>BBQ: List</h1>

<table id="admin-table" class="bbq">
  <thead>
    <th class="date">Date</th>
    <th>Title</th>
    <th class="published">Published</th>
    <th class="controls">Controls</th>
  </thead>
  
  <tbody>
    <% @bbqs.each do |bbq| %>
      <tr>
        <td class="date"><%=h bbq.days.first.bbq_date if(!bbq.days.empty?) %> - <%=h bbq.days.last.bbq_date if(!bbq.days.empty?) %></td>
        <td><%=h bbq.title %></td>
        <td class="published"><%=h bbq.is_published%></td>
        <td class="controls">
          <ul class="table_controls">
            <li><%= link_to 'Preview', bbq %></li>
            <li><%= link_to 'Edit', edit_bbq_path(bbq) %></li>
            <li><%= link_to 'Delete', bbq, :confirm => 'Are you sure?', :method => :delete %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>