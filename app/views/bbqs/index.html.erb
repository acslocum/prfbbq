<h1>Listing bbqs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Event date</th>
    <th>Content</th>
  </tr>

<% @bbqs.each do |bbq| %>
  <tr>
    <td><%=h bbq.title %></td>
    <td><%=h bbq.event_date %></td>
    <td><%=h bbq.content %></td>
    <td><%= link_to 'Show', bbq %></td>
    <td><%= link_to 'Edit', edit_bbq_path(bbq) %></td>
    <td><%= link_to 'Destroy', bbq, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bbq', new_bbq_path %>