<h1>Editing band</h1>

<% form_for(@band) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :bbq %><br />
    <%= f.select(:bbq_id,options_for_select(present_bbqs_select_list())) %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :play_date %><br />
    <%= f.date_select :play_date %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.text_field :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.text_field :end_time %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @band %> |
<%= link_to 'Back', bands_path %>