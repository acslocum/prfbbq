<h1>Listing bands</h1>

<table>
  <tr>
    <th>BBQ</th>
    <th>Name</th>
    <th>Play date</th>
    <th>Start time</th>
    <th>End time</th>
  </tr>

<% @bands.each do |band| %>
  <tr>
    <td>[<%=h band.bbq.full_title %>]</td>
    <td><%=h band.name %></td>
    <td><%=h band.play_date %></td>
    <td><%=h band.start_time %></td>
    <td><%=h band.end_time %></td>
    <td><%= link_to 'Show', band %></td>
    <td><%= link_to 'Edit', edit_band_path(band) %></td>
    <td><%= link_to 'Destroy', band, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New band', new_band_path %>