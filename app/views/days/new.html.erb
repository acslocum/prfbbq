<h1>Day: New</h1>

<nav class="admin">
  <%= link_to 'Back', days_path %>
</nav>

<% form_for(@day) do |f| %>
  <div id="error_message">
    <%= f.error_messages %>
  </div>

  <!-- <div class="input_container short">
    <%#= f.label :event_date %>
    <%#= f.date_select :event_date %>
    <label for="bbq_date">Event Date</label>
    <input type="text" id="bbq_date" />
  </div> -->
  
  <h2>BBQ Title</h2>
  
  <div class="input_container long clearfix">
	  <%#= f.label :venue_id %>
	  <%#= f.select(:venue_id,options_for_select(venue_select_list))%>
	  
	  <label for="venue">Venue</label>
	  <select type="text" id="venue">
	    <option>Venue One</option>
	    <option>Venue Two</option>
	  </select>
  </div>
  
  <div class="input_container">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  
  <div class="input_container short">
    <%= f.label :start_time %>
    <%= f.text_field :start_time, :class=>'time' %>
  </div>
  
  <div class="input_container short">
    <%= f.label :end_time %>
    <%= f.text_field :end_time, :class=>'time' %>
  </div>
  
  <%= f.submit 'Create' %>
<% end %>

<% content_for :javascript do %>
  <script>
    $(function() {
      $('select').customSelects();
      $('input.time').timeEntry();
    });
  </script>
<% end %>