<h1>New day</h1>

<% form_for(@day) do |f| %>
  <%= f.error_messages %>

  <div class="input_container short">
    <%#= f.label :event_date %>
    <%#= f.date_select :event_date %>
    <label for="bbq_date">Event Date</label>
    <input type="text" id="bbq_date" />
  </div>
  
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.text_field :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.text_field :end_time %>
  </p>
  <div class="input_container long">
	<%= f.label :bbq_id %>
	<%= f.select(:bbq_id,options_for_select(present_bbqs_select_list))%>
  </div>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', days_path %>